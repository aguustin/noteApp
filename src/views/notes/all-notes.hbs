<div class="row">
    {{#each notes}}
        <div class="notes col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm col-md-12 col-sm-12" type="submit">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto col-lg-3 col-md-3 col-sm-12">
            <div class="card-body">
                <h1>Hello {{user.name}}</h1>
                <script>console.log({{user.name}})</script>
                <p class="lead">There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create one now!</a>
            </div>
        </div>   
    {{/each}}
</div>